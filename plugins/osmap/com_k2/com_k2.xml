<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="osmap" method="upgrade">
    <name>PLG_OSMAP_K2</name>
    <author>Joomlashack</author>
    <authorEmail>help@joomlashack.com</authorEmail>
    <authorUrl>https://www.joomlashack.com/</authorUrl>
    <copyright>Copyright 2016-2024 Joomlashack</copyright>
    <license>GNU GPL; see LICENSE file</license>
    <description>PLG_OSMAP_K2_DESC</description>
    <version>5.0.17</version>
    <creationDate>March 08 2024</creationDate>

    <files>
        <folder>language</folder>

        <filename plugin="com_k2">com_k2.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="subcategories"
                       type="list"
                       default="no"
                       label="PLG_OSMAP_K2_FOLLOW_SUBCATEGORIES"
                       description="PLG_OSMAP_K2_FOLLOW_SUBCATEGORIES_DESC">
                    <option value="yes">JYES</option>
                    <option value="no">JNO</option>
                </field>

                <field name="showk2items"
                       type="list"
                       default="always"
                       label="PLG_OSMAP_K2_SHOW_ITEMS_LABEL"
                       description="PLG_OSMAP_K2_SHOW_ITEMS_LABEL_DESC">
                    <option value="never">PLG_OSMAP_K2_OPTION_NEVER</option>
                    <option value="always">PLG_OSMAP_K2_OPTION_ALWAYS</option>
                    <option value="xml">PLG_OSMAP_K2_OPTION_XML_ONLY</option>
                    <option value="html">PLG_OSMAP_K2_OPTION_HTML_ONLY</option>
                </field>

                <field name="suppressdups"
                       type="list"
                       default="no"
                       label="PLG_OSMAP_K2_SUPRESS_DUPLICATES"
                       description="PLG_OSMAP_K2_SUPRESS_DUPLICATES_DESC">
                    <option value="yes">JYES</option>
                    <option value="no">JNO</option>
                </field>
            </fieldset>

            <fieldset name="xml">
                <field name="priority"
                       type="list"
                       default="0.5"
                       label="PLG_OSMAP_K2_PRIORITY"
                       description="PLG_OSMAP_K2_PRIORITY_DESC">
                    <option value="-1">PLG_OSMAP_K2_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>

                <field name="changefreq"
                       type="list"
                       default="weekly"
                       label="PLG_OSMAP_K2_CHANGEFREQ_LABEL"
                       description="PLG_OSMAP_K2_CHANGEFREQ_LABEL_DESC">
                    <option value="-1">PLG_OSMAP_K2_OPTION_USE_PARENT_MENU</option>
                    <option value="always">PLG_OSMAP_K2_OPTION_ALWAYS</option>
                    <option value="hourly">PLG_OSMAP_K2_OPTION_HOURLY</option>
                    <option value="daily">PLG_OSMAP_K2_OPTION_DAILY</option>
                    <option value="weekly">PLG_OSMAP_K2_OPTION_WEEKLY</option>
                    <option value="monthly">PLG_OSMAP_K2_OPTION_MONTHLY</option>
                    <option value="yearly">PLG_OSMAP_K2_OPTION_YEARLY</option>
                    <option value="never">PLG_OSMAP_K2_OPTION_NEVER</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
