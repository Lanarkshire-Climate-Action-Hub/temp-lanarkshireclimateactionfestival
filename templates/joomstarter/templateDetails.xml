<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site" method="upgrade">
	<name>joomstarter</name>
	<version>2.0.1</version>
	<creationDate>Oct 2023</creationDate>
	<author>Russell English</author>
	<authorEmail>russell.english@stormit.co.uk</authorEmail>
	<copyright>(C) 2024 Storm</copyright>
	<description>TPL_joomstarter_XML_DESCRIPTION</description>
	<inheritable>1</inheritable>
	<scriptfile>script.php</scriptfile>
	<files>
		<filename>index.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>templateDetails.xml</filename>
		<folder>html</folder>
	</files>
	<media destination="templates/site/joomstarter" folder="media">
		<folder>js</folder>
		<folder>css</folder>
		<folder>scss</folder>
		<folder>images</folder>
	</media>
	<positions>
		<position>top-search</position>
		<position>top-menu</position>
		<position>menu</position>
		<position>header</position>
		<position>hero</position>
		<position>topa</position>
		<position>topb</position>
		<position>topc</position>
		<position>topd</position>
		<position>tope</position>
		<position>bottoma</position>
		<position>bottomb</position>
		<position>bottomc</position>
		<position>bottomd</position>
		<position>bottome</position>
		<position>footer-social</position>
		<position>footer-logo</position>
		<position>policy-menu</position>
		<position>copyright-footer-logos</position>
		<position>copyright-footer-copyright</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/tpl_joomstarter.ini</language>
		<language tag="en-GB">en-GB/tpl_joomstarter.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
        		<field name="use_uikit" type="radio" layout="joomla.form.field.radio.switcher" label="Use UIKit" description="Enable or disable UIKit" default="1">
            		<option value="0">No</option>
            		<option value="1">Yes</option>
        		</field>
        		<field name="use_bootstrap" type="radio" layout="joomla.form.field.radio.switcher" label="Use Bootstrap" description="Enable or disable Bootstrap" default="0">
            		<option value="0">No</option>
            		<option value="1">Yes</option>
        		</field>
        		<field name="use_fontawesome" type="radio" layout="joomla.form.field.radio.switcher" label="Use FontAwesome" description="Enable or disable FontAwesome" default="0">
            		<option value="0">No</option>
            		<option value="1">Yes</option>
        		</field>
				<field name="facebook" type="url" default="https://www.facebook.com/climateactionlanarkshire" label="Facebook" description="" size="10" />
				<field name="instagram" type="url" default="https://www.instagram.com/climateactionlanarkshire/" label="Instagram" description="" size="10" />
				<field name="linkedin" type="url" default="https://www.linkedin.com/company/climate-action-lanarkshire" label="LinkedIn" description="" size="10" />
				<field name="bluesky" type="url" default="https://bsky.app/profile/cahlanarkshire.bsky.social" label="BlueSky" description="" size="10" />
				<field name="footer-logos" type="imagelist" default="" label="Select an image" description="" directory="images/logo" exclude="" stripext="" />
			</fieldset>
		</fields>
	</config>
</extension>
